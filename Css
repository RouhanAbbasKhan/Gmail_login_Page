}

.btn-danger {
    background-color: #dc3545; /* Red color for button */
    border-color: #dc3545; /* Red border color for button */
}

.btn-danger:hover {
    background-color: #c82333; /* Darker red on hover */
    border-color: #bd2130; /* Darker red border on hover */
}

.btn-danger:focus,
.btn-danger.focus {
    box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.5); /* Red shadow on focus */
}
