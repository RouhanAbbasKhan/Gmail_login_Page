/* Custom CSS for Gmail Sign Up Page */

body {
    background-color: #f8f9fa; /* Light gray background */
}

.card {
    border: none;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.card-header {
    background-color: #dc3545; /* Red color for header */
}

.card-header,
.card-body {
    border-radius: 10px;
}

.form-control {
    border: 1px solid #ced4da; /* Gray border for form inputs */
}

.form-control:focus {
    border-color: #dc3545; /* Red border color on focus */
